<%= semantic_bootstrap_nested_form_for @recipe, :html => { :class => 'form-horizontal' } do |f| %>
		<%= f.inputs do %>
				<%= f.input :name %>
				<%= f.semantic_fields_for :ingredients do %>
					<%= f.inputs do %>
						<%= f.input :name %>
						<%= f.link_to_remove "Remove" %>
					<% end %>
				<% end %>
				<%= f.link_to_add "add ingredient", :ingredients %>
				<%= f.input :description, :input_html => { :class => 'autogrow', :rows => 15, :cols => 50 } %>
				<%= f.input :persons %>
				<%= f.input :preparation_time %>
		<% end %>
		<%= f.actions do %>
			<%= f.action :submit %>
			<%= f.action :cancel %>
		<% end %>
<% end %>
