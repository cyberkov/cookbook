<%= semantic_form_for @recipe, :html => { :class => 'form-horizontal' } do |f| %>
		<%= f.inputs do %>
				<%= f.input :name %>
				<%= f.input :description, :input_html => { :class => 'autogrow', :rows => 15, :cols => 50 } %>
				<%= f.input :persons %>
				<%= f.input :preparation_time %>
		<% end %>
		<%= f.actions do %>
			<%= f.action :submit %>
			<%= f.action :cancel %>
		<% end %>
<% end %>
