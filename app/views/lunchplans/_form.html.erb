<%= form_for @lunchplan, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :day, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :day, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :recipe_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :recipe_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :notes, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lunchplans_path, :class => 'btn' %>
  </div>
<% end %>
