<%= form_for @ingredient, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :unit_name, :class => 'control-label' %>
    <div class="controls">
		<%= f.text_field :unit_name, data: {autocomplete_source: Unit.order(:name).map(&:name)} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :food_name, :class => 'control-label' %>
    <div class="controls">
			<%= f.text_field :food_name, data: {autocomplete_source: foods_path(:format => :json)} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :recipe_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :recipe_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ingredients_path, :class => 'btn' %>
  </div>
<% end %>
