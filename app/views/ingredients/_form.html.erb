<%= semantic_form_for @ingredient, :html => { :class => 'form-horizontal' } do |f| %>
		<%= f.inputs do %>
				<%= f.input :amount %>
				<%= f.input :unit %>
				<%= f.input :food %>
				<%= f.input :recipe %>
		<% end %>
		<%= f.actions do %>
			<%= f.action :submit %>
			<%= f.action :cancel %>
		<% end %>
<% end %>
