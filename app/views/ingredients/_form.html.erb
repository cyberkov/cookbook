<%= form_for @ingredient, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :unit_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :unit_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :food_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :food_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :recipe_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :recipe_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ingredients_path, :class => 'btn' %>
  </div>
<% end %>
